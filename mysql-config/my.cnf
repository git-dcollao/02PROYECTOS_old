[mysqld]
# Configuración de timeouts para operaciones largas (backups/restore)
wait_timeout = 1800
interactive_timeout = 1800
net_read_timeout = 600
net_write_timeout = 600
max_execution_time = 1800000

# Configuración de conexiones
connect_timeout = 60
max_connections = 200

# Configuración de buffer para operaciones grandes
max_allowed_packet = 256M
innodb_buffer_pool_size = 512M

# Configuración de charset
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Configuración de logs
sql_mode = "STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION"

# Configuración de InnoDB para mejor rendimiento
innodb_lock_wait_timeout = 600
innodb_flush_log_at_trx_commit = 2

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4